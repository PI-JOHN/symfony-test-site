<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Админпанель!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/framework/fontawesome-4.7.0/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-4.5.0-dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/main/css/style.css') }}">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand border-right" href="{{ path('admin_home') }}">
        Админпанель
        <i class="fa fa-microchip ml-2 mr-2" aria-hidden="true"></i>
    </a>

    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('admin_home') }}">Главная <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('admin_user') }}">Пользователи</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('admin_category') }}">Категории</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('admin_post') }}">Посты</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" target="_blank" href="{{ path('home') }}">Обратно на сайт</a>
            </li>
        </ul>
        <form class="form-inline">
            <a href="{{ path('app_logout') }}" class="btn btn-outline-info my-2 my-sm-0" type="submit">Выход</a>
        </form>
    </div>
</nav>
{% block body %}{% endblock %}
{% block javascripts %}
    <script
            src="http://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.4.2/umd/popper.min.js">
    </script>
    <script src="{{ asset('assets/framework/bootstrap-4.5.0-dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>