<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Home Page!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/framework/fontawesome-4.7.0/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-4.5.0-dist/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/main/css/style.css') }}">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">
            <i class="fa fa-microchip" aria-hidden="true"></i>
        </a>

        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Главная <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <form class="form-inline">
                <a href="{{ path('app_login') }}" class="btn btn-outline-success my-2 my-sm-0" type="submit">Вход</a>
